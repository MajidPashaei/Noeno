
        <!-- Start main-content -->
        <main class="main-content dt-sl mt-4 mb-3">
            <div class="container main-container">
                <div class="row">

                    <!-- Start Sidebar -->
              @await Html.PartialAsync("_Partial_profile")
            <!-- End Sidebar -->

                    <!-- Start Content -->
                    <div class="col-xl-9 col-lg-8 col-md-8 col-sm-12">
                        <div class="row">
                            <div class="col-12">
                                <div class="section-title text-sm-title title-wide mb-1 no-after-title-wide dt-sl mb-2 px-res-1">
                                    <h2>علاقمندی ها</h2>
                                </div>
                                <div class="dt-sl">
                                    <div class="row">
                                        @if (ViewBag.f != null)
                                        {
                                            foreach (var item in ViewBag.f)
                                            {
                                                <div class="col-lg-6 col-md-12 ">
                                                    <div class="card-horizontal-product shadow">
                                                        <div class="card-horizontal-product-thumb">
                                                            <a href="/singlepage/index/@item.Id">
                                                                <img src="~/fileupload/@item.Image" alt="">
                                                            </a>
                                                        </div>
                                                        <div class="card-horizontal-product-content">
                                                            <div class="card-horizontal-product-title">
                                                                <a href="/singlepage/index/@item.Id">
                                                                    <h3>@item.Title_Pro</h3>
                                                                </a>
                                                            </div>
                                                            <div class="card-horizontal-product-price">
                                                                <span>@item.Main_Price تومان</span>
                                                            </div>
                                                            <div class="card-horizontal-product-price">
                                                                <span>@item.Discount_Price تومان</span>
                                                            </div>
                                                            <div class="card-horizontal-product-buttons">
                                                                <a href="/singlepage/index/@item.Id" class="btn">مشاهده محصول</a>
                                                                <a href="/YourAccount/DelFavorite/@item.Id" class=" remove-btn">
                                                                    <i class="mdi mdi-trash-can-outline"></i>
                                                                </a>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                            
                                        }
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- End Content -->

                </div>
            </div>
        </main>
        <!-- End main-content -->
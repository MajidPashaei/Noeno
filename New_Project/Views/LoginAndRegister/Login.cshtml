@model ViewModel.Entities.User.Vm_User
<!-- Start mini-header -->

<!-- End mini-header -->

<!-- Start main-content -->
<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">

        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto">
                <div class="form-ui dt-sl dt-sn pt-4">
                    <div class="section-title title-wide mb-1 no-after-title-wide">
                      
                      
                            <h2 class="font-weight-bold">ثبت ‌نام / ورود</h2>
                      
                    </div>
                       <form action="/LoginAndRegister/sendtoken" method="POST">
                        <div class="form-row-title">
                            <h3>لطفا شماره موبایل خود را وارد کنید.</h3>
                        </div>
                        <div class="form-row with-icon">
                            <input  asp-for="Phone" placeholder="(0912-XXX-XXXX)" style="direction: ltr; text-align: center;" class="input-ui pr-2" type="tel" pattern="09(0[0-9]|1[0-9]|3[0-9]|2[0-9])-?[0-9]{3}-?[0-9]{4}" autocomplete="off"  required oninvalid="this.setCustomValidity('شماره موبایل خود را بطور صحیح وارد نمایید.')" oninput="setCustomValidity('')" >
                            <i >
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-sim" viewBox="0 0 16 16">
                                    <path d="M2 1.5A1.5 1.5 0 0 1 3.5 0h7.086a1.5 1.5 0 0 1 1.06.44l1.915 1.914A1.5 1.5 0 0 1 14 3.414V14.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 14.5v-13zM3.5 1a.5.5 0 0 0-.5.5v13a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V3.414a.5.5 0 0 0-.146-.353l-1.915-1.915A.5.5 0 0 0 10.586 1H3.5z"/>
                                    <path d="M5.5 4a.5.5 0 0 0-.5.5V6h2.5V4h-2zm3 0v2H11V4.5a.5.5 0 0 0-.5-.5h-2zM11 7H5v2h6V7zm0 3H8.5v2h2a.5.5 0 0 0 .5-.5V10zm-3.5 2v-2H5v1.5a.5.5 0 0 0 .5.5h2zM4 4.5A1.5 1.5 0 0 1 5.5 3h5A1.5 1.5 0 0 1 12 4.5v7a1.5 1.5 0 0 1-1.5 1.5h-5A1.5 1.5 0 0 1 4 11.5v-7z"/>
                                </svg>
                            </i>
                         
                        </div>
                        <p id="ePhone" class="mt-3 text-danger"></p>
                      

                        
                        <div class="form-row mt-3">
                            <button type="submit" style="text-align: center;" 

                                class="btn-primary-cm btn-with-icon mx-auto w-100">
                             
                                <i class="mdi mdi-login-variant"></i>
                                تایید
                            </button>
                            <p style="font-size: 10px;" class="c-login__footer text-center mt-1">
                    با ورود و یا ثبت نام در نوِنو&zwnj; شما
                    <a href="/foot/Privacy/" target="_blank">
                        شرایط و قوانین
                    </a>
                    استفاده از سرویس های سایت نوِنو&zwnj; و
                    <a href="/foot/Privacy/" target="_blank">
                        قوانین حریم خصوصی
                    </a>
                    آن را می&zwnj;پذیرید.
                </p>
                         
                        </div>
                       
                            </form>
                    
                </div>
            </div>
        </div>

    </div>
    
</main>
<!-- End main-content -->

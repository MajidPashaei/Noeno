  @using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model ViewModel.Entities.User.Vm_User
<!-- Start main-content -->
<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">

        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto">
                <div class="form-ui dt-sl dt-sn pt-4">
                    <div class="section-title title-wide mb-1 no-after-title-wide">
                        <h2 class="font-weight-bold">ورود</h2>
                    </div>

                     @if (ViewBag.msg != null)
                        {
                            <p class="alert alert-danger"> @ViewBag.msg</p>
                        }


                    <form action="/LoginAndRegister/comparepass">
                        <div class="form-row-title">
                            <h3>شما از قبل عضو خانواده نوِنو بوده‌اید، لطفا رمز خود را وارد کنید.</h3>
                        </div>


                        <div class="form-row with-icon">
                            <input asp-for="Password" type="password" minlength="6" class="input-ui pr-2" placeholder="  رمز ورود خود را وارد نمایید" autocomplete="off"  required oninvalid="this.setCustomValidity('رمز عبور خود را بطور صحیح وارد نمایید.')" oninput="setCustomValidity('')" >
                            <i onclick="Show();">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                </svg>


                            </i>
                            <p> حداقل ۶ کاراکتر وارد کنید. </p>
                        </div>
                        <script>
                            function Show() {
                                debugger
                                if (document.getElementById("Password").type=="text") {
                                    document.getElementById("Password").type="password"  
                                }
                                else{
                                    document.getElementById("Password").type="text"
                                }

                               
                                }
                        </script>
                        <div class="form-row mt-3">
                            <button style="text-align: center;" type="submit"
                                class="btn-primary-cm btn-with-icon mx-auto w-100">
                                <i class="mdi mdi-login-variant"></i>
                                ورود به نوِنو
                            </button>
                        </div>
                          @{
                              var b=@HttpContextAccessor.HttpContext.Session.GetString("mobile");
                        <div class="form-row mt-3">
                          
                            <a  style="text-align: center; color: #ff9001;" href="/LoginAndRegister/Resendtoken?a=@b"
                                class="btn-with-icon mx-auto w-100">
                                فراموشی رمز عبور
                            </a>
                        </div>
                          }
                       
                    </form>
                </div>
            </div>
        </div>

    </div>
</main>
<!-- End main-content -->

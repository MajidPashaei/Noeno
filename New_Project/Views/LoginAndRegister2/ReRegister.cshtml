<main class="main-content dt-sl mt-4 mb-3">
    <div class="container main-container">

        <div class="row">
            <div class="col-xl-4 col-lg-5 col-md-7 col-12 mx-auto">
                <div class="form-ui dt-sl dt-sn pt-4">
                    <div class="section-title title-wide mb-1 no-after-title-wide">
                        <h2 class="font-weight-bold">ثبت‌نام / تکمیل اطلاعات</h2>
                    </div>
                    <form action="/LoginAndRegister/ReAdd">
                        <div class="form-row-title">
                            <h3>لطفا اطلاعات زیر را وارد کنید.</h3>
                        </div>
                                 @if (ViewBag.msg != null)
                        {
                            <p class="alert alert-danger"> @ViewBag.msg</p>
                        }
                      
                        <br>
                          <div class="form-row with-icon">
                            <input type="text"  asp-for="Password" minlength="6"  class="input-ui pr-2" placeholder="  رمز عبور" autocomplete="off"  required oninvalid="this.setCustomValidity('رمز عبور خود را بطور صحیح وارد نمایید.')" oninput="setCustomValidity('')" >

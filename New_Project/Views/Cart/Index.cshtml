                                <div class="row  ml-1 mr-1" style="display: flex; justify-content: center; justify-self: center; justify-items: center;">

                                          @if (ViewBag.A!=null)
           {
               @foreach (var item in ViewBag.A)
               {

                                        <div class=" col-xl-3 col-lg-3 col-md-3 col-sm-12 card m-2 checkout-content p-3">
                                            
                                                                     <p class="checkout-title">
                                                                    <span> <span style="font-size: 10px;"> </span></span> &nbsp;  &nbsp; &nbsp;  <span>نوع معامله : <span style="font-size: 10px;"> @item.Type_Transaction </span></span>
                                                                </p>
                                                                <div class="row" style="height:100px ;">
                                                                            <div class="col-4">
                                                                                <img src="/FileUpload/@item.Image" style="height: 100px;width: 100px;" alt="">
                                                                            </div>
                                                                            <div class="col-8" style="display: ;">
                                                                                 <p style="font-size: 12px;" class="checkout-title">
                                                                                    نام کالا : <span>  @item.product_Name </span>
                                                                                </p>
                                                                                <p style="font-size: 12px;" class="checkout-title">
                                                                                    هزینه سیستم بازرسی  : <span>@item.PriceB</span>
                                                                                </p>
                                                                                <p style="font-size: 12px;" class="checkout-title">
                                                                                    فی : <span>@item.product_Price  تومان </span>
                                                                                </p>
                                                                            </div>
                                                                                    
                                                                            
                                                                               
                                                                 </div>
                                                            
                                                                
                                                               
                                           <div class="row mt-2">
                                               
                                               
                                           
                                             </div>  
                                             
                                                  <a href="/cart/del/@item.Id" style="background-color: darkorange;" class="btn btn-primery">حذف</a>
                                                  <br>
                                                <a href="/home/AddCart2/@item.Id" style="background-color: darkorange;" class="btn btn-primery">اضافه کردن</a>
                                           
                                                               
                                                             
                                                    
                                        </div>
                                       
                                         }
               
                                        }
 

   
                                </div>
                                    
                            </div>
                            <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
                                <div class="row">
                                    <div class="col-xl-12 col-lg-12 col-12 px-0">
                                        <div class="dt-sn mb-2">
                                            <div class="cart-empty">
                                                <div class="circle-box-icon">
                                                    <i class="mdi mdi-cart-remove"></i>
                                                </div>
                                                <p class="cart-empty-title">لیست خرید بعدی شما خالی است!</p>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
    
  
         
            

                    
                  












                                          <div class="col-12">


                                          
                                            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 dt-sn mt-1  pt-2">
                                                <div class=" checkout-feature-aside">
                                                                <a href="/YourAccount2/additionalinfo" class=" d-block mb-1">
                                                                    <button class="btn-primary-cm btn-with-icon w-100 text-center pr-0">
                                                                        <i class="mdi mdi-arrow-left"></i>
                                                                        ادامه ثبت خرید
                                                                    </button>
                                                                </a>
                                                </div>
                                            </div>
                                            

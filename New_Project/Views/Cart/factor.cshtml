 <main class="main-content dt-sl mt-1 ">
    <div class="container main-container">
    <div class="row">
<div class="col-12">
    <div class="tab-content" id="nav-tabContent">
        <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

            <div class="col-12 mt-2">
                <div class="dt-sl">
                    <div class="table-responsive">
                        <table class="table table-order">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>ردیف</th>
                                    <th>شماره فاکتور</th>
                                    <th>کد سفارش </th>
                                     <th>نام محصول</th>
                                    <th> تاریخ سفارش </th>
                                    <th>  مبلغ کالا </th>
                                    <th>   هزینه بازرسی  </th>
                                    <th>شماره فروشنده</th>
                                    <th>ادرس گیرنده</th>

                                     
                                   
                                </tr>
                            </thead>
                            <tbody>
                                @if ( ViewBag.factor!= null)
                                {
                                    int i = 1;

                                    @foreach (var item in ViewBag.factor)
                                    {




                                        <tr>
                                            <td></td>
                                            <td>@i</td>
                                            <td>@item.Id_Factro</td>
                                             <td>@item.Id</td>
                                             <td>@item.product_Name</td>
                                            <td> @item.Date_Order</td>
                                            <td>@item.Total_sum</td>
                                              <td>@item.PriceB</td>
                                                <td>@item.TellSel</td>
                                                <td>@item.State-@item.City-@item.FirstAddress</td>
                                         
                                           

                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
      
    </div>
</div>
